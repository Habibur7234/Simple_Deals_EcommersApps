<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_food_image"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_food_name"
                android:text="Name: "
                android:fontFamily="@font/brandon_grotesque_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#11238E"
                />

            <TextView
                android:id="@+id/txt_food_quantity"
                android:text="Quantity: 1"
                android:fontFamily="@font/brandon_grotesque_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/txt_food_add_on"
                android:text="Addon: Default"
                android:fontFamily="@font/brandon_grotesque_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/txt_size"
                android:text="Size: None"
                android:fontFamily="@font/brandon_grotesque_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/txt_food_price"
                android:text="price: 10 Tk"
                android:fontFamily="@font/brandon_grotesque_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#491B1B"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>